<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/header_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Package"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Package"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambahkan package untuk event yang akan direkomendasikan ke customer"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPreviewImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <EditText
            android:id="@+id/etNamaPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tambahkan Nama Package Event"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etHargaPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tambahkan Harga Package"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/etDeskripsiPackage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Tambahkan Deskripsi Package"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Gambar dari Galeri"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnCaptureImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambil Gambar dengan Kamera"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"
                android:background="@drawable/btn_batal"
                android:textColor="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tambah"
                android:background="@drawable/btn_tambah"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
